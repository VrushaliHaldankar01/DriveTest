<!DOCTYPE html>
<html lang="en">
  <!-- header-->
  <%- include('layout/head'); -%>
  <body>
    <!-- Navigation-->
    <%- include('layout/nav'); -%>
    <!-- Page Header-->
    <section style="background-color: #f7e1e5">
      <div class="container py-5">
        <div class="row justify-content-center">
          <div class="col-md-8">
            <h2 class="text-center mb-4">Examiner Dashboard</h2>
           

            <!-- Filter form -->
            <form action="/examiner" method="GET" class="mb-4">
                <label for="testTypeFilter" class="form-label">Filter by Test Type:</label>
                <select class="form-select" id="testTypeFilter" name="testTypeFilter">
                  <option value="">All Tests</option>
                  <option value="G2">G2 Test</option>
                  <option value="G">G Test</option>
                </select>
                <button type="submit" class="btn btn-primary">Apply Filter</button>
              </form>
           
            <!-- List of appointments or drivers -->
            <% if (typeof drivetest !== 'undefined'){ if(drivetest.length > 0){ %>
               

                <table class="table p-4 mt-5">
                  <thead class="thead-dark">
                    <tr>
                      <th scope="col">First Name</th>
                      <th scope="col">Last Name</th>
                      <th scope="col">Make</th>
                      <th scope="col">Model</th>
                      <th scope="col">Year</th>
                      <th scope="col">Plate Number</th>
                      <th scope="col">Appointment Date</th>
                    </tr>
                  </thead>
                  <tbody>
                    <% drivetest.forEach((item) => { %>
                    <tr>
                      <!-- <td><%= item._id %></td> -->
                      <td><%= item.firstName %></td>
                      <td><%= item.lastName %></td>
                      <td><%= item.car_details.make %></td>
                      <td><%= item.car_details.model %></td>
                      <td><%= item.car_details.year %></td>
                      <td><%= item.car_details.plateNumber %></td>
                      <td><%= item.appointmentId && item.appointmentId.date ? item.appointmentId.date.toLocaleDateString() : 'No Appointment Date' %></td>
                      
                      <td>
                        <!-- Trigger the modal by clicking on a button -->
                        <button
                          type="button"
                          class="btn btn-success"
                          data-bs-toggle="modal"
                          data-bs-target="#exampleModal<%= item._id %>"
                        >
                          <i class="fas fa-edit"></i>
                        </button>
                      </td>
                    </tr>
      
                    <!-- Modal -->
                    <div
                      class="modal fade"
                      id="exampleModal<%= item._id %>"
                      tabindex="-1"
                      aria-labelledby="exampleModalLabel"
                      aria-hidden="true"
                    >
                      <div class="modal-dialog">
                        <div class="modal-content">
                          <div class="modal-header">
                            <h1 class="modal-title fs-5" id="exampleModalLabel">
                              Edit Information
                            </h1>
                            <button
                              type="button"
                              class="btn-close"
                              data-bs-dismiss="modal"
                              aria-label="Close"
                            ></button>
                          </div>
                          <div
                            class="modal-body"
                            style="max-height: 500px; overflow-y: auto"
                          >
                            <!-- Create a form for each row with all the required fields -->
                            <form action="/updateExaminer" method="POST">
                              <input
                                type="hidden"
                                id="licenseNumberInput"
                                name="licenseNumber"
                                value="<%= item.licenseNumber%>"
                              />
                              <input
                                type="hidden"
                                id="_id"
                                name="_id"
                                value="<%= item._id%>"
                              />
                              <h1 class="modal-title fs-5" id="exampleModalLabel">
                                Personal Information
                              </h1>
      
                              <div class="form-group mb-3 mt-3">
                                <label for="lastName">Last Name</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  id="lastName"
                                  name="lastName"
                                  value="<%= item.lastName %>"
                                  disabled
                                />
                              </div>
                            
                             
      
                              <h1 class="modal-title fs-5" id="exampleModalLabel">
                                Car Information
                              </h1>
      
                              <!-- Car information-->
                              <div class="form-group mb-3 mt-3">
                                <label for="make">Make</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  id="make"
                                  name="make"
                                  value="<%= item.car_details.make %>"
                                />
                              </div>
                              <div class="form-group mb-3">
                                <label for="model">Model</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  id="model"
                                  name="model"
                                  value="<%= item.car_details.model %>"
                                />
                              </div>
                              <div class="form-group mb-3">
                                <label for="year">Year</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  id="year"
                                  name="year"
                                  value="<%= item.car_details.year %>"
                                />
                              </div>
                              <div class="form-group mb-3">
                                <label for="plateNumber">Plate Number</label>
                                <input
                                  type="text"
                                  class="form-control"
                                  id="plateNumber"
                                  name="plateNumber"
                                  value="<%= item.car_details.plateNumber %>"
                                />
                              </div>
                              <div class="mb-3">
                                <label>Mark as:</label>
                                <div class="form-check">
                                  <input type="checkbox" class="form-check-input" id="passCheckbox" name="testResult" value="Pass" <%= item.testResult === 'Pass' ? 'checked' : '' %>>
                                  <label class="form-check-label" for="passCheckbox">Pass</label>
                                </div>
                                <div class="form-check">
                                  <input type="checkbox" class="form-check-input" id="failCheckbox" name="testResult" value="Fail" <%= item.testResult === 'Fail' ? 'checked' : '' %>>
                                  <label class="form-check-label" for="failCheckbox">Fail</label>
                                </div>
                              </div>
                            <div class="form-group mb-3">
                                <label for="comments">Examiner Comments</label>
                                <textarea
                                  class="form-control"
                                  id="comments"
                                  name="comments"
                                  rows="3"
                                  placeholder="Add comments about the Drive Test..."
                                ><%= item.comments %></textarea>
                              </div>
                              <!-- Submit Button -->
                              <button type="submit" class="btn btn-primary">
                                Save
                              </button>
                            </form>
                          </div>
                        </div>
                      </div>
                    </div>
                    <% }); %>
                  </tbody>
                </table>
                <% } else { %>
                <p>No data available</p>
      
                <% } } %>
            </div>

          
            </div>
          </div>
        </div>
      </div>
    </section>

    <!-- Footer-->
    <%- include('layout/footer'); -%>
    <!-- Bootstrap core JS-->
    <%- include('layout/script'); -%>
  </body>
</html>
